<div class="container d-flex flex-column
 justify-content-center">
  <div class="d-flex 
 justify-content-center">
    <h2>Success!Please use this link</h2>
  </div>
  <div class="d-flex 
 justify-content-center">
    <div class="btn btn-light w-25">
      <a id="copyArea" href="{{newUrl}}">{{newUrl}}</a>
    </div>
    <button type="button" onclick="copyUrl()" class="btn btn-primary">Copy</button>
  </div>
</div>

<script>
  function copyUrl() {
      const value = document.querySelector('#copyArea').innerHTML
      navigator.clipboard.writeText(value).then(() => {
        alert('copy successfully')
      })
    }
</script>